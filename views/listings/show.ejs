
<% layout("/layouts/boilerplate") %>

<body>


    <div class="row">


        <div class="offset-sm-3">

            <br><br>   
            <h1><%= listing.title %></h1>
            <br>

        </div>


        <div class="col-lg-6 col-md-7 offset-sm-3">

            <div class="card col" >        
                <img src=<%= listing.image %> class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                        <br>
                        <%= listing.description %> <br><br>
                        &#8360; <%= listing.price.toLocaleString("en-pk") %> / night <br><br>
                        <%= listing.location %> <br>
                        <%= listing.country %> <br>
                    </p>
                </div>
            </div>

        </div>

        </div>

        <div class="btns">

            <a href="/listings/<%= listing.id %>/edit" class="btn add-btn btn-dark col-md-1 offset-sm-3">Edit</a>

            <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">

                <button class="btn btn-dark offset-4">Delete</button>

            </form>

        </div>


    <br><br>
</div>

</body>