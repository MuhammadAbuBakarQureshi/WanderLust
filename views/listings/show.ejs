
<% layout("/layouts/boilerplate") %>

<body>


    <div class="row">


        <div>

            <br><br>   
            <h1 class="offset-lg-2"><%= listing.title %></h1>
            <br>

        </div>


        <div class="col-lg-8  col-md-10 offset-lg-2">

            <div class="card col listing-card" >        
                <img src=<%= listing.image %> class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                        <p class="card-text">Owned by <i><%= listing.owner.username %></i></p>
                        
                        <p class="card-text"><%= listing.description %></p>

                        <p class="card-text">&#8360; <%= listing.price.toLocaleString("en-pk") %> / night</p>

                        <p class="card-text"><%= listing.location %></p>

                        <p class="card-text"><%= listing.country %></p>
                </div>
            </div>

        </div>

    </div>

    <% if(user && user._id.equals(listing.owner._id)) {%>

    <div class="btns">

        <a href="/listings/<%= listing.id %>/edit" class="btn add-btn btn-dark col-md-1 offset-sm-2">Edit</a>

        <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">

            <button class="btn btn-dark offset-4">Delete</button>

        </form>
        
    </div>

    <% } %>

    <hr>

    <%- include("../includes/addreview.ejs") %>

    <hr><br>

    <%- include("../includes/showreviews.ejs") %>

    <br> 

</body>